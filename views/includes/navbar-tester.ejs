<header class="bg-gray-900">
    <div class="flex items-center justify-between px-4 py-3">
    <div>
        <img class="h-8" src="/img/logo-inverted.svg" alt="Workcation">
    </div>
    <div>
        <button onclick="toggleDropdown()" type="button" class="block text-gray-500 hover:text-white focus:text-white focus:outline-none" id="dropdown-button">
            <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                <path class="hidden" fill-rule="evenodd" d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z" id="dropdown-img-o"/>
                <path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z" id="dropdown-img-c"/>
            </svg>
        </button>
    </div>
    </div>
    <div class="hidden px-2 pt-2 pb-4" id="dropdown-list">
        <a href="#" class="block px-2 py-1 text-white font-semibold rounded hover:bg-gray-800">List your property</a>
        <a href="#" class="mt-1 block px-2 py-1 text-white font-semibold rounded hover:bg-gray-800">Trips</a>
        <a href="#" class="mt-1 block px-2 py-1 text-white font-semibold rounded hover:bg-gray-800">Messages</a>
    </div>
</header>

<script>
    toggleDropdown = () => {
        if (document.getElementById("dropdown-list").style.display === "block") {
            document.getElementById("dropdown-list").style.display = "none";

            // Toggle button image
            document.getElementById("dropdown-img-c").style.display = "block";
            document.getElementById("dropdown-img-o").style.display = "none";
        } else {
            document.getElementById("dropdown-list").style.display = "block";

            // Toggle button image
            document.getElementById("dropdown-img-c").style.display = "none";
            document.getElementById("dropdown-img-o").style.display = "block";
        }
    }
</script>